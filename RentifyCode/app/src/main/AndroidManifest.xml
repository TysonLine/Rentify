        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rentify"
        tools:targetApi="31">
        <activity
            android:name=".LeaseItems"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomePage"
            android:exported="true" />
        <activity
            android:name=".CreateAccount"
            android:exported="true" />
        <activity
            android:name=".AndroidPage"
            android:exported="true" />
        <activity
            android:name=".RentItems"
            android:exported="true"></activity>
        <activity
            android:name=".AdminCategories"
            android:exported="true"></activity>
        <activity android:name=".ManageRentRequests" android:exported="true"></activity>
        <activity android:name=".SentRequests" android:exported="true"></activity>
